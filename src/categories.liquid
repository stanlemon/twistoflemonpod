---
pagination:
  data: collections.categories
  size: 1
  alias: categorySlug
permalink: /category/{{ categorySlug }}/
layout: layouts/base.liquid
eleventyComputed:
  title: "Category: {{ collections.categories[categorySlug].name }} - Life with a Twist of Lemon"
  description: "Browse {{ collections.categories[categorySlug].posts.size }} posts in the {{ collections.categories[categorySlug].name }} category."
---

{% assign categoryData = collections.categories[categorySlug] %}
{% assign posts = categoryData.posts %}
{% assign categoryName = categoryData.name %}

{% include "partials/breadcrumb.liquid" %}

<h1>Category: {{ categoryName }}</h1>
<p>{{ posts | size }} post{% if posts.size != 1 %}s{% endif %}</p>

<div class="blog-grid">
  {% for post in posts %}
    <article class="blog-post-card">
      <header>
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <small>{{ post.date | readableDate }}</small>
      </header>
      <section>
        <p>{{ post.data.description | default: post.templateContent | excerpt: 200 }}</p>
      </section>

      {% include "partials/tags.liquid", label: "tags", prefix: "tag", values: post.data.tags %}
      {% include "partials/tags.liquid", label: "categories", prefix: "category", values: post.data.categories %}
    </article>
  {% endfor %}
</div>

<p><a href="/">‚Üê Back to home</a></p>
